@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
    @Styles.Render("~/Content/css")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div class="row row-header">
    <div class="col-lg-3 col-md-3 col-sm-4">
        <img src="~/Content/images/logo.png" class="img-responsive"/>
    </div>
    <div class="col-lg-offset-7 col-md-offset-7 col-sm-offset-6" style="width: 90px;">
        @using (Html.BeginForm("Login", "Account", FormMethod.Get))
        {
            <button class="btn btn-default btn-block">Log In</button>
        }
    </div>
    <div class="" style="width: 90px; margin-left: 10px;">
        @using (Html.BeginForm("Register", "Account", FormMethod.Get))
        {
            <button class="btn btn-success btn-block">Sign Up</button>
        }
    </div>
</div>
<div class="container-full-height">
    <div class="row welcome-row hidden-lg hidden-md hidden-sm">
        <div class="col-sm-12 welcome-item">
            <div class="col-sm-12" style="padding-top: 20px;">
                <img src="~/Content/images/logo.png" class="img-responsive"/>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12 text-center" style="padding-top: 20px;">
                <span class="welcome-msg">You are welcome!</span>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12" style="padding-top: 20px;">
                @using (Html.BeginForm("Login", "Account", FormMethod.Get))
                {
                    <button name="action" value="login" class="btn btn-default btn-block">Log In</button>
                }
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12">
                <div class="separator">
                    <span class="textSeparator">or</span>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-offset-1 col-lg-10" style="padding-bottom: 20px;">
                @using (Html.BeginForm("Register", "Account", FormMethod.Get))
                {
                    <button name="action" value="signup" class="btn btn-success btn-block">Sign Up</button>
                }
            </div>
        </div>
    </div>
    <div class="container hidden-xs" style="width: 550px;">
        <div id="slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="item ">
                    <img src="~/Content/images/demos/demo1.png">
                    <div class="carousel-caption">
                        <h3>Imagine</h3>
                        @*<p>Букет нежных роз для признания в любви</p>*@
                    </div>
                </div>
                <div class="item active">
                    <img src="~/Content/images/demos/demo2.png">
                    <div class="carousel-caption">
                        <h3>Draw</h3>
                        @*<p>Яркий подарок для любого торжества</p>*@
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/images/demos/demo3.png">
                    <div class="carousel-caption">
                        <h3>Share</h3>
                        @*<p>Корзина свежих цветов привнесет уют в любой дом</p>*@
                    </div>
                </div>
            </div>
            <a class="left carousel-control carousel-control-transparent" href="#slider" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control carousel-control-transparent" href="#slider" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
</body>
</html>